#include<stdio.h>
int main(){
	int a[100],i,max=0,n;
	printf("enter the numbers to be created: ");
	scanf("%d",&n);
	printf("\nenter the elements: ");
	for(i=0;i<n;i++){
		scanf("%d",&a[i]);
	}
	max=a[0];
	for(i=0;i<n;i++){
	if(a[i]>max){
		max=a[i];
	}
}
	printf("the largest element in an given array = %d",max);
}
