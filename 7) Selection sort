#include<stdio.h>
int main(){
	int a[10],n,i,j,tmp;
	printf("enter the number of element to be created: ");
	scanf("%d",&n);
	printf("enter the elements: ");
	for(i=0;i<n;i++){
		scanf("%d",&a[i]);
	}                     
	for(i=0;i<n-1;i++){
		for(j=i+1;j<n;j++){
			tmp=a[i];
			a[i]=a[j];
			a[j]=tmp;
		}
	}     
	printf("the bubble sorted array:");           
	for(i=0;i<n;i++){
		printf(" %d",a[i]);
	}                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                  
}
